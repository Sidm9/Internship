<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_back"
    tools:context=".Statistics">

    <TextView
        android:id="@+id/head"
        android:layout_width="322dp"
        android:layout_height="113dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="571dp"
        android:fontFamily="@font/gfs_didot"
        android:gravity="center"
        android:text="Results"
        android:textColor="@color/yellow"
        android:textSize="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cans"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="418dp"
        android:textColor="@color/violet"
        android:hint="Correct answers"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/round_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head" />

    <TextView
        android:id="@+id/wans"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="356dp"
        android:hint="Wrong Answers"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/round_corners"
        android:textColor="@color/violet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cans" />

    <TextView
        android:id="@+id/tques"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="288dp"
        android:textColor="@color/violet"
        android:hint="Total Questions"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/round_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wans" />

    <TextView
        android:id="@+id/tmarks"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="223dp"
        android:textColor="@color/violet"
        android:hint="Total Marks"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/round_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tques" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="113dp"
        android:background="@drawable/button_round_corner"
        android:text="EXIT"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/again"
        app:layout_constraintTop_toBottomOf="@+id/tmarks"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/button_round_corner"
        android:text="Play Again"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tmarks" />


</androidx.constraintlayout.widget.ConstraintLayout>

